{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "eol-last": ["error", "always"],
    "indent": ["error", 2, {
      "FunctionDeclaration": { "parameters": "first" }
    }],
    "no-shadow": ["error"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "one-var": ["error", { "separateRequires": true }],
    "no-unused-vars": ["warn", {
      "ignoreRestSiblings": true,
      "argsIgnorePattern": "^_"
    }]
  }
}
